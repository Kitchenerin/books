<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Number of pages</th>
    <th>Author ID</th>
    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.number_of_page  %></td>
        <td><%= book.author_id %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><span class="destroy_button" data-id=<%=book.id%>> Destroy </span></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<div class="row">
<div class="col-md-6 col-sm-12">
  <%= link_to 'New Book', new_book_path %>
</div>
<div class="col-md-6 d-sm-none d-md-block">
  <%= link_to 'Back to Author', authors_path(:author_id => @author_id) %>
</div>
</div>